{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Makefile",
  "scopeName": "source.makefile",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#targets" },
    { "include": "#variables" },
    { "include": "#strings" },
    { "include": "#automatic-variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.makefile",
          "match": "#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.makefile",
          "match": "^\\s*(ifeq|ifneq|ifdef|ifndef|else|endif|include|-include|sinclude|override|export|unexport|define|endef|undefine)\\b"
        }
      ]
    },
    "targets": {
      "patterns": [
        {
          "name": "entity.name.function.target.makefile",
          "match": "^[a-zA-Z0-9_.-]+(?=\\s*:)"
        },
        {
          "name": "constant.language.makefile",
          "match": "^\\.(PHONY|SUFFIXES|DEFAULT|PRECIOUS|INTERMEDIATE|SECONDARY|SECONDEXPANSION|DELETE_ON_ERROR|IGNORE|LOW_RESOLUTION_TIME|SILENT|EXPORT_ALL_VARIABLES|NOTPARALLEL|ONESHELL|POSIX)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.makefile",
          "match": "\\$\\([a-zA-Z_][a-zA-Z0-9_]*\\)|\\$\\{[a-zA-Z_][a-zA-Z0-9_]*\\}|\\$[a-zA-Z_]"
        },
        {
          "name": "variable.other.assignment.makefile",
          "match": "^[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*[:+?]?=)"
        }
      ]
    },
    "automatic-variables": {
      "patterns": [
        {
          "name": "variable.language.makefile",
          "match": "\\$[@<^+?*%]|\\$\\([@<^+?*%]\\)|\\$\\{[@<^+?*%]\\}"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.makefile",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "string.quoted.single.makefile",
          "begin": "'",
          "end": "'"
        }
      ]
    }
  }
}
