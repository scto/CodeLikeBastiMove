{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Groovy",
  "scopeName": "source.groovy",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#types" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.groovy",
          "match": "//.*$"
        },
        {
          "name": "comment.block.groovy",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.groovy",
          "match": "\\b(if|else|for|while|do|switch|case|default|break|continue|return|try|catch|finally|throw|assert)\\b"
        },
        {
          "name": "keyword.other.groovy",
          "match": "\\b(abstract|as|class|def|enum|extends|implements|import|in|instanceof|interface|new|package|private|protected|public|static|super|this|throws|trait)\\b"
        },
        {
          "name": "storage.type.groovy",
          "match": "\\b(void|boolean|byte|char|short|int|long|float|double)\\b"
        },
        {
          "name": "constant.language.groovy",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.groovy",
          "begin": "\"\"\"",
          "end": "\"\"\""
        },
        {
          "name": "string.quoted.triple.single.groovy",
          "begin": "'''",
          "end": "'''"
        },
        {
          "name": "string.quoted.double.groovy",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.groovy",
              "match": "\\\\."
            },
            {
              "name": "variable.other.interpolated.groovy",
              "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*|\\$\\{[^}]+\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.groovy",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.groovy",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.groovy",
          "match": "\\b(0[xX][0-9a-fA-F_]+|0[bB][01_]+|[0-9][0-9_]*\\.?[0-9_]*([eE][+-]?[0-9_]+)?[fFdDlLgG]?)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.groovy",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.groovy",
          "match": "(\\+\\+|--|\\+|-|\\*|/|%|&&|\\|\\||!|==|!=|<=>|<=|>=|<|>|=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=|>>>=|->|\\?:|\\?\\.|\\.\\.|~)"
        }
      ]
    }
  }
}
