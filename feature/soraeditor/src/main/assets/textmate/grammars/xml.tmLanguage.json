{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "XML",
  "scopeName": "text.xml",
  "patterns": [
    { "include": "#comments" },
    { "include": "#cdata" },
    { "include": "#doctype" },
    { "include": "#processing" },
    { "include": "#tags" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.xml",
          "begin": "<!--",
          "end": "-->"
        }
      ]
    },
    "cdata": {
      "patterns": [
        {
          "name": "string.unquoted.cdata.xml",
          "begin": "<!\\[CDATA\\[",
          "end": "\\]\\]>"
        }
      ]
    },
    "doctype": {
      "patterns": [
        {
          "name": "meta.tag.sgml.doctype.xml",
          "begin": "<!DOCTYPE",
          "end": ">",
          "patterns": [
            {
              "name": "entity.name.tag.xml",
              "match": "[a-zA-Z_][a-zA-Z0-9_:-]*"
            }
          ]
        }
      ]
    },
    "processing": {
      "patterns": [
        {
          "name": "meta.tag.preprocessor.xml",
          "begin": "<\\?",
          "end": "\\?>",
          "patterns": [
            {
              "name": "entity.name.tag.xml",
              "match": "[a-zA-Z_][a-zA-Z0-9_:-]*"
            },
            { "include": "#attributes" }
          ]
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "name": "meta.tag.xml",
          "begin": "</?",
          "end": "/?>",
          "patterns": [
            {
              "name": "entity.name.tag.xml",
              "match": "[a-zA-Z_][a-zA-Z0-9_:-]*"
            },
            { "include": "#attributes" }
          ]
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.xml",
          "match": "[a-zA-Z_][a-zA-Z0-9_:-]*(?==)"
        },
        {
          "name": "string.quoted.double.xml",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "string.quoted.single.xml",
          "begin": "'",
          "end": "'"
        }
      ]
    }
  }
}
