{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kotlin",
  "scopeName": "source.kotlin",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#types" },
    { "include": "#annotations" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.kotlin",
          "match": "//.*$"
        },
        {
          "name": "comment.block.kotlin",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kotlin",
          "match": "\\b(if|else|for|while|do|when|try|catch|finally|throw|return|break|continue)\\b"
        },
        {
          "name": "keyword.other.kotlin",
          "match": "\\b(abstract|actual|annotation|as|by|class|companion|const|constructor|crossinline|data|enum|expect|external|final|fun|get|import|in|infix|init|inline|inner|interface|internal|is|lateinit|noinline|object|open|operator|out|override|package|private|protected|public|reified|sealed|set|suspend|tailrec|this|typealias|val|var|vararg|where)\\b"
        },
        {
          "name": "constant.language.kotlin",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.kotlin",
          "begin": "\"\"\"",
          "end": "\"\"\""
        },
        {
          "name": "string.quoted.double.kotlin",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kotlin",
              "match": "\\\\."
            },
            {
              "name": "variable.other.interpolated.kotlin",
              "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*|\\$\\{[^}]+\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.kotlin",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.kotlin",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.kotlin",
          "match": "\\b(0[xX][0-9a-fA-F_]+|0[bB][01_]+|[0-9][0-9_]*\\.?[0-9_]*([eE][+-]?[0-9_]+)?[fFdDlL]?)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.kotlin",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "storage.type.annotation.kotlin",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.kotlin",
          "match": "(\\+\\+|--|\\+|-|\\*|/|%|&&|\\|\\||!|==|!=|===|!==|<=|>=|<|>|=|\\+=|-=|\\*=|/=|%=|->|\\?:|\\?\\.|\\.\\.|!!|::)"
        }
      ]
    }
  }
}
